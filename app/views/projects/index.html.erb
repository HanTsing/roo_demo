<%- model_class = Project -%>
<div class="page-header">
  <%= render partial: "notice_msg" %>
</div>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  <%= link_to "上传文件", import_file_projects_path, :class => 'btn btn-primary' %>
  <%= form_tag search_projects_path, multipart: true do %>
    <%= select_tag "publish_status",  publish_status_options %>
    <%= submit_tag "查询", :class => "icon-search" %>
  <% end %>
</div>

<% if @projects.present? %>
  <table class="table table-striped">
    <%= render partial: "column_title" %>
    <%= render partial: "projects",   :locals => { projects: @projects } %>
  </table>
<% else %>
  <div class="well">
    暂无数据
  </div>
<% end %>

<%= link_to "新建", new_project_path, :class => 'btn btn-primary' %>
